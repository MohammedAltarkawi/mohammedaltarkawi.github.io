<mvc:View
	controllerName="mst.github.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'mst/github/model/formatter'
	}">

	<Page showHeader="true">
        <headerContent>
            <Switch id="themeSwitch" change=".toggleTheme" />
        </headerContent>
        <footer class="mstPageFooter">
            <OverflowToolbar
                ariaHasPopup="Dialog"
                class="mstPageFooter"
            >
                <layoutData>
                    <OverflowToolbarLayoutData priority="AlwaysOverflow" />
                </layoutData>
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://question-mark"
                    ariaHasPopup="Dialog"
                    type="Emphasized"
                    width="5px"
                    press="handlePopoverPress"
                    class="roundClass"
                />
            </OverflowToolbar>
        </footer>
    </Page>

</mvc:View>
